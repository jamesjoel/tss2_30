<%- include('header') %>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <a href="/student" class="btn btn-info">Back</a>      
                <br />
                <Br />
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <form action="/student/update/<%= result._id %>" method="post">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Edit Student Information</h4>
                            </div>
                            <!-- <%= result.full_name %> -->
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="">Full Name</label>
                                    <input name="full_name" value="<%= result.full_name %>" type="text" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="">Class</label>
                                    <select name="stu_class" class="form-control">
                                        <option>Select</option>
                                        <% for(var i=1; i<=12; i++)
                                        {
                                            %>
                                            <option <% if(result.stu_class == i){ %> selected <% } %>>
                                                <%= i %>
                                            </option>
                                            <% } %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="">Subject</label>
                                    <select name="subject" class="form-control">
                                        <option>Select</option>
                                        <option <% if(result.subject == 'All'){ %> selected <% } %> >All</option>
                                        <option <% if(result.subject == 'PCB'){ %> selected <% } %> >PCB</option>
                                        <option <% if(result.subject == 'PCM'){ %> selected <% } %> >PCM</option>
                                        <option <% if(result.subject == 'Commorce'){ %> selected <% } %> >Commorce</option>
                                        <option <% if(result.subject == 'Arts'){ %> selected <% } %> >Arts</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="">Fee</label>
                                    <input type="text" value="<%= result.fee %>" name="fee" class="form-control" />
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">Update</button>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



