<%- include('header') %>

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <a href="/contact" class="btn btn-info">Back</a>
        </br>
        </br>
    </br>
    <form action="/contact/save/<%= result._id %>" method="post">
        <div class="card">
            <div class="card-header">
            <h1>Edit Details</h1>
            </div>
           <div class="card-body">
              <div class="form-group">
               <label>Full Name</label>
               <input type="text" value="<%= result.f_name %>" name="f_name" class="form-control"/>
              </div>
              <div class="form-group">
                <label for="gender" class="text-light">Gender</label>
                <div class="radio inline">
                    <input type="radio" id="radio-2" name="gender" value="male" <%= result.gender == 'male' ? 'checked' : '' %>>
                    <label for="radio-2" class="radio-label">Male</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-3" name="gender" value="female"  <%= result.gender == 'female' ? 'checked' : '' %> >
                    <label for="radio-3" class="radio-label">Female</label>
                </div>
            </div>
              <!-- <div class="form-group">
               <label>Gender</label>
              </br>
                 Male<input type="radio"  value="male" name="gender"/>
                 Female<input type="radio" value="female" name="gender"/>
              </div> -->
              <div class="form-group">
               <label>Email</label>
               <input type="text" value="<%= result.email %>" name="email" class="form-control"/>
              </div>
              <div class="form-group">
               <label>Contact No.</label>
               <input type="text" value="<%= result.contact %>" name="contact" class="form-control"/>
              </div>
              <div class="form-group">
               <label>City</label>
               <select class="form-control" name="city">
                   <option>select</option>
                   <option <% if(result.city == "Indore"){%> selected <%}%> >Indore</option>
                   <option <% if(result.city == "Pune"){%> selected <%}%> >Pune</option>
                   <option <% if(result.city == "Mumbai"){%> selected <%}%> >Mumbai</option>
               </select>
              </div>
              <div class="form-group">
               <label>Address</label>
               <textarea cols="35" name="address" rows="5" class="form-control" ><%= result.address %></textarea>
              </div>
              
          </div>
          <div class="card-footer">
              <button class="btn btn-info" type="submit">Submit</button>
          </div>
        
    
    </div>
</form>

</div>
</div>
</div>

<%- include('footer') %>